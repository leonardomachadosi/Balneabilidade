<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_adapter_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_adapter_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adapter_titulo"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_adapter_lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adapter_lat"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_adapter_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adapter_lon"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_adapter_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adapter_cidade"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Situação: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_adapter_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_adapter_cidade"
            android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="8dp" />

    </RelativeLayout>


</RelativeLayout>